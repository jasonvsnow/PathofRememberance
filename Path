						println("");
						if (stats[14] == 1) {
							stats = combat(stats, 14);
							squid = false;
						}
						else if (stats[14] == 2) {
							slowPrintln("You take your cloak off and offer it to the creature. It is, at first, hesitant but when you show no intention to harm it, it quickly snatches the cloak and wraps it about itself, looking up at you with a new curiosity. As its shiverings subside, the little thing picks up a potato and offers it to you. Deciding it would be rude to refuse, you accept the potato. The two of you sit together and enjoy your meal for a time. Once you are done, you rise and bid the creature farewell, for now.");
							if (stats[1] > 15) stats[1] = 15;
							printStats(stats);
							println("");
							squid = false;
						}
						else if (stats[14] == 3) {
							slowPrintln("You look the pink thing over before turning away, leaving it where it shivers.");
							squid = false;
						}
					}
				}
				else if (stats[8] == 2) {
					slowPrintln("You exit via the northern door into what you know is the West Barracks.");
