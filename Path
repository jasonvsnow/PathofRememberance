								slowPrintln("You leave.");
								puzzle = false;
							}
						}
					}
					else slowPrintln("You find nothing new in this room, the safe already opened and the contents.");
				}
				else if (stats[8] == 2) {
					slowPrintln("You head back into the hallway.");
					stats[11] = 11;
					room12 = false;
				}
				else println("Invalid choice. Try again.");

			}
			
		}
		return stats;
	}
	
	
	
	
	
	public static int[] combat(int[] stats, int com) throws InterruptedException {
		Scanner input = new Scanner(System.in);
		boolean properturn = false;
		boolean choice = false;
		int currentAC = 16;
		//weak shade combat
		if (com == 1) {
			slowPrintln("From the shadows, a frail, skeletal being shuffles, boney fingers reaching out for you, gaping mouth issuing a soft moan of despair.");
			println("");
			int shadeHP = 11;
			while (shadeHP > 0 && stats[1] > 0) {
					//run the options for your turn
				while (properturn == false) {
					stats = yourTurn(stats);
					if (stats[8] == 1) {
						int[] youAttack = attack(stats[4]);
						if (youAttack[0] >= 12) {
							slowPrintln("You attack the shade, doing " + youAttack[1] + " damage.");
							shadeHP -= youAttack[1];
						}
						else slowPrintln("You attack the shade, but miss!");
						properturn = true;
					}
					else if (stats[8] == 2) {
						if (stats[2] >= 1) {
							if (stats[0] == 0) slowPrintln("You channel power into the orb in your hand, expanding it into a protective bubble around yourself.");
							else slowPrintln("You strengthen the protective bubble around yourself.");
							stats[0] += 2;
							stats[2] -= 1;
							properturn = true;
						}
						else {
							println("Not enough mana!");
							properturn = false;
						}
					}
					else if (stats[8] == 3) {
						if (stats[2] >= 2) {
							stats[2] -= 2;
							int[] youBurst = burst();
							if (youBurst[0] >= 12) {
								slowPrintln("You hurl the orb in your hand, summoning another immediately, dealing " + youBurst[1] + " damage to the shade.");
								shadeHP = shadeHP - youBurst[1];
							}
							else slowPrintln("You hurl the orb in your hand, summoning another immediately, but the jerky motions of the shade cause you to miss.");
							properturn = true;
						}
						else {
							slowPrintln("Insufficient mana!");
							properturn = false;
						}
					}
					else if (stats[8] == 4 && stats[5] > 0) {
						int heal = (int)(Math.random() * 6)+1;
						int heal2 = (int)(Math.random() * 6)+1;
						int heal3 = -(heal + heal2 + 8);
						takeDmg(stats, heal3);
						stats[5] -= 1;
						slowPrintln("You drink a potion quickly to restore" + heal3 + "health.");
						printStats(stats);
						println("");
						properturn = true;
						
					}
					else {
						slowPrintln("Invalid option. Try again.");
						properturn = false;
					}
				}
				//run enemies turn
				if (shadeHP > 0) {
				//randomly generared chances of hitting and amounts of damage
					int shadeHit = (int)(Math.random() * 20)+4;
					int shadeDmg = (int)(Math.random() * 6)+2;
					currentAC = 16;
					if (stats[0] > 0) {
						currentAC = 20;
						shadeDmg -= 3;
					}
					if (shadeHit >= currentAC) {
						slowPrintln("The shade lunges, boney fingers slashing across you, dealing " + shadeDmg + " damage.");
						takeDmg(stats, shadeDmg);
					}
					else slowPrintln("The shade attempts to claw you, but you fend off the attack.");
					if (stats[0] > 0) stats[0] -= 1;
					properturn = false;

				}
				else slowPrintln("You have defeated the shade!");

			}
			if (stats[1] > 0) {
				slowPrintln("With a final blow, the shade falls to the ground.");
				stats[8] = 0;
				choice = false;
				while (choice == false) {
					println("1) Spare the shade");
					println("2) End the shade");
					print("> ");
					stats[8] = input.nextInt();
					println("");
					if (stats[8] == 1) {
						slowPrintln("You hold out the orb of light towards the shade, a string of brilliance extending towards the defeated foe. Light consumes the shade before, with a gentle sigh, the light fades and the shade is gone.");
						stats[9] += 1;
						choice = true;
					}
					else if (stats[8] == 2) {
						slowPrintln("You thrust the orb you hold into the shade, which howls before exploding into a cloud of dark smoke.");
						stats[10] += 1;
						choice = true;
					}
					else slowPrintln("Invalid choice. Try again.");
				}
				slowPrintln("Gained 1 essence.");
				stats = addEssence(stats, 1);
				println("");
			}
			else slowPrintln("You have been defeated by the shade.");
		}
		
		
		
		//husk combat
		else if (com == 2) {
			slowPrintln("A figure stumbles out of the shadows towards you, its skin shadows, its eyes two empty pits. Tattered armor clings to it, scraps of clothing hang off of it, a rusty sword is clutched in its hand.");
			println("");
			int huskHP = 19;
			while (huskHP > 0 && stats[1] > 0) {
					//run the options for your turn
				while (properturn == false) {
					stats = yourTurn(stats);
					if (stats[8] == 1) {
						int[] youAttack = attack(stats[4]);
						if (youAttack[0] >= 14) {
							slowPrintln("You attack the husk, doing " + youAttack[1] + " damage.");
							huskHP -= youAttack[1];
						}
						else slowPrintln("You attack the husk, but miss!");
						properturn = true;
					}
					else if (stats[8] == 2) {
						if (stats[2] >= 1) {
							if (stats[0] == 0) slowPrintln("You channel power into the orb in your hand, expanding it into a protective bubble around yourself.");
							else slowPrintln("You strengthen the protective bubble around yourself.");
							stats[0] += 2;
							stats[2] -= 1;
							properturn = true;
						}
						else {
							println("Not enough mana!");
							properturn = false;
						}
					}
					else if (stats[8] == 3) {
						if (stats[2] >= 2) {
							stats[2] -= 2;
							int[] youBurst = burst();
							if (youBurst[0] >=  14) {
								slowPrintln("You hurl the orb in your hand, summoning another immediately, dealing " + youBurst[1] + " damage to the husk.");
								huskHP = huskHP - youBurst[1];
							}
							else slowPrintln("You hurl the orb in your hand, summoning another immediately, but the jerky motions of the husk cause you to miss.");
							properturn = true;
						}
						else {
							slowPrintln("Insufficient mana!");
							properturn = false;
						}
					}
					else if (stats[8] == 4 && stats[5] > 0) {
						int heal = (int)(Math.random() * 6)+1;
						int heal2 = (int)(Math.random() * 6)+1;
						int heal3 = -(heal + heal2 + 8);
						takeDmg(stats, heal3);
						stats[5] -= 1;
						slowPrintln("You drink a potion quickly to restore" + heal3 + "health.");
						printStats(stats);
						println("");
						properturn = true;
					}
					else {
						slowPrintln("Invalid option. Try again.");
						properturn = false;
					}
				}
				//run enemies turn
				if (huskHP > 0) {
				//randomly generared chances of hitting and amounts of damage
					for (int hit = 0; hit < 2; hit++) {
						int huskHit = (int)(Math.random() * 20)+6;
						int huskDmg = (int)(Math.random() * 6)+3;
						currentAC = 16;
						if (stats[0] > 0) {
							currentAC = 20;
							huskDmg -= 3;
						}	
						if (huskHit >= currentAC) {
							slowPrintln("The husk lunges, swiping with its sword, dealing " + huskDmg + " damage.");
							takeDmg(stats, huskDmg);
						}
						else slowPrintln("The husk attempts to slash you, but you fend off the attack.");
						properturn = false;
					}
					if (stats[0] > 0) stats[0] -= 1;
				}
				else slowPrintln("You have defeated the husk!");

			}
			if (stats[1] > 0) {
				slowPrintln("The husk crumbles before you, sorrowful eyes looking to you.");
				stats[8] = 0;
				choice = false;
				while (choice == false) {
					println("What will you do?");
					println("1) Spare the husk");
					println("2) End the husk");
					print("> ");
					stats[8] = input.nextInt();
					println("");
					if (stats[8] == 1) {
						slowPrintln("You reach forward to close the eyes of the husk, which issues a soft sigh and crumbles into ash, blowing away.");
						stats[9] += 1;
						choice = true;
					}
					else if (stats[8] == 2) {
						slowPrintln("You thrust your sword forward into the husk's chest which shriek, fire bursting forth from it as it burns away.");
						stats[10] += 1;
						choice = true;
					}
					else slowPrintln("Invalid choice. Try again.");
				}
				slowPrintln("Gained 2 essence.");
				stats = addEssence(stats, 2);
			}
			else slowPrintln("You have been defeated by the husk.");
		}		
		//squid
		else if (com == 14) {
			int squidHP = 10;
			boolean stunned = false;
			int mindstab = 0;
			properturn = false;
			slowPrintln("You lunge at the wretch to end it, causing it to shriek. You feel a powerful force assail your mind...");
			int resist = (int)(Math.random() * 20)+4;
			if (resist > 10) {
				slowPrintln("...but you manage to fight the influence off.");
			}
			else {
				slowPrintln("A piercing pain fills your mind and you find yourself stunned.");
				stunned = true;
				mindstab = (((int)(Math.random() * 4)+1)+((int)(Math.random() * 4)+1)+2);
				takeDmg(stats, mindstab);
			}
			while (squidHP > 0 && stats[1] > 0) {
				//your turn
				while (properturn == false) {
					if (stunned == false) {
						stats = yourTurn(stats);
						if (stats[8] == 1) {
							int[] youAttack = attack(stats[4]);
							if (youAttack[0] >= 12) {
								slowPrintln("You attack the wretch, doing " + youAttack[1] + " damage.");
								squidHP -= youAttack[1];
							}
							else slowPrintln("You attack the wretch, but miss!");
							properturn = true;
						}
						else if (stats[8] == 2) {
							if (stats[2] >= 1) {
								if (stats[0] == 0) slowPrintln("You channel power into the orb in your hand, expanding it into a protective bubble around yourself.");
								else slowPrintln("You strengthen the protective bubble around yourself.");
								stats[0] += 2;
								stats[2] -= 1;
								properturn = true;
							}
							else {
								println("Not enough mana!");
								properturn = false;
							}
						}
						else if (stats[8] == 3) {
							if (stats[2] >= 2) {
								stats[2] -= 2;
								int[] youBurst = burst();
								if (youBurst[0] >= 12) {
									slowPrintln("You hurl the orb in your hand, summoning another immediately, dealing " + youBurst[1] + " damage to the wretch.");
									squidHP = squidHP - youBurst[1];
								}
								else slowPrintln("You hurl the orb in your hand, summoning another immediately, but the jerky motions of the shade cause you to miss.");
								properturn = true;
							}
							else {
								slowPrintln("Insufficient mana!");
								properturn = false;
							}
						}
						else if (stats[8] == 4 && stats[5] > 0) {
							int heal = (int)(Math.random() * 6)+1;
							int heal2 = (int)(Math.random() * 6)+1;
							int heal3 = -(heal + heal2 + 8);
							takeDmg(stats, heal3);
							stats[5] -= 1;
							slowPrintln("You drink a potion quickly to restore" + heal3 + "health.");
							printStats(stats);
							println("");
							properturn = true;
							
						}
						else {
							slowPrintln("Invalid option. Try again.");
							properturn = false;
						}
					}
					else {
						slowPrintln("You cannot act while stunned, but you manage to shake off the stun right as the wretch acts again.");
						properturn = true;
						stunned = false;
					}
				}
				//squid turn
				if (squidHP > 0) {
					int regain = (int)(Math.random() * 6)+1;
					if (regain == 5 || regain == 6) {
						slowPrintln("You feel the wretch attack your mind again.");
						resist = (int)(Math.random() * 20)+4;
						if (resist > 10) {
							slowPrintln("...but you manage to fight the influence off.");
						}
						else {
							slowPrintln("A piercing pain fills your mind and you find yourself stunned.");
							stunned = true;
							mindstab = (((int)(Math.random() * 4)+1)+((int)(Math.random() * 4)+1)+2);
							takeDmg(stats, mindstab);
						}
					}
					else {
						currentAC = 16;
						int squidHit = (int)(Math.random() * 20)+3;
						int squidDmg = (((int)(Math.random() * 4)+1) + ((int)(Math.random() * 4)+1) + 2);
						if (stats[0] > 0) {
							squidDmg -= 3;
							currentAC = 20;
						}
						if (squidHit >= currentAC) {
							slowPrint("The wretch swipes at you with a slimy tentacle. As it hits, you feel a spike of pain shoot up into your mind, dealing " + squidDmg + " damage.");
							takeDmg(stats, squidDmg);
						}
						else slowPrintln("The wretch attempts to slap you with a tentacle, but you avoid the sloppy attack.");
					}
					properturn = false;
					if (stats[0] > 0) stats[0] -= 0;
				}
				else slowPrintln("You have slain the wretch!");
			}
			if (stats[1] > 0) {
				slowPrintln("As the wretch falls to the floor, it remains still, lifeless.");
				slowPrintln("Gained two essence.");
				addEssence(stats, 2);
			}
			else slowPrintln("The wretch has slain you.");
		}
		//big boi combat
		else if (com == 4) {
			slowPrintln("A shadow claw grabs the floor beside the pool. A great and terrible image rises up, squezzing out from beneath the body. It is a grotesque amalgamation of parts of the body. Too many arms of too many sizes stick out of its malformed torso. It stands upon seven feet, each thudding hard and heavy upon the ground. It’s multiple heads snarl and snap with a plethora of mouths, all filled with a great many teeth. Dozens of bright red eyes glare at you.");
			println("");
			int beastHP = 34;
			while (beastHP > 0 && stats[1] > 0) {
					//run the options for your turn
				while (properturn == false) {
					stats = yourTurn(stats);
					if (stats[8] == 1) {
						int[] youAttack = attack(stats[4]);
						if (youAttack[0] >= 12) {
							if (stats[4] == 5) {
								int light = (youAttack[1] * 2);
								slowPrintln("You attack the beast and the light blade flashes, searing the monster badly, dealing " + light + " damage to it.");
								beastHP -= light;
							}
							else {
								slowPrintln("You attack the beast, doing " + youAttack[1] + " damage.");
								beastHP -= youAttack[1];
							}
						}
						else slowPrintln("You attack the beast, but miss!");
						properturn = true;
					}
					else if (stats[8] == 2) {
						if (stats[2] >= 1) {
							if (stats[0] == 0) slowPrintln("You channel power into the orb in your hand, expanding it into a protective bubble around yourself.");
							else slowPrintln("You strengthen the protective bubble around yourself.");
							stats[0] += 2;
							stats[2] -= 1;
							properturn = true;
						}
						else {
							println("Not enough mana!");
							properturn = false;
						}
					}
					else if (stats[8] == 3) {
						if (stats[2] >= 2) {
							stats[2] -= 2;
							int[] youBurst = burst();
							if (youBurst[0] >=  14) {
								slowPrintln("You hurl the orb in your hand, summoning another immediately, dealing " + youBurst[1] + " damage to the beast.");
								beastHP = beastHP - youBurst[1];
							}
							else slowPrintln("You hurl the orb in your hand, summoning another immediately, but the jerky motions of the beast cause you to miss.");
							properturn = true;
						}
						else {
							slowPrintln("Insufficient mana!");
							properturn = false;
						}
					}
					else if (stats[8] == 4 && stats[5] > 0) {
						int heal = (int)(Math.random() * 6)+1;
						int heal2 = (int)(Math.random() * 6)+1;
						int heal3 = -(heal + heal2 + 8);
						takeDmg(stats, heal3);
						stats[5] -= 1;
						slowPrintln("You drink a potion quickly to restore" + heal3 + "health.");
						printStats(stats);
						println("");
						properturn = true;
					}
					else {
						slowPrintln("Invalid option. Try again.");
						properturn = false;
					}
				}
				//run enemies turn
				if (beastHP > 0) {
					int beastHit1 = (int)(Math.random() * 20)+6;
					int beastDmg1 = (int)(Math.random() * 8)+4;
					currentAC = 16;
					if (stats[0] > 0){
						currentAC = 20;
						beastDmg1 -= 3;
					}
					if (beastHit1 >= currentAC) {
						slowPrintln("The beast lunges, swiping with its many claws, dealing " + beastDmg1 + " damage.");
						takeDmg(stats, beastDmg1);
					}
					else slowPrintln("The beast attempts to slash you, but you fend off the attack.");
					int beastHit2 = (int)(Math.random() * 20)+6;
					int beastDmg2 = (int)(Math.random() * 6)+2 + (int)(Math.random() * 6)+2;
					currentAC = 16;
					if (stats[0] > 0) {
						currentAC = 20;
						beastDmg2 -= 3;
					}
					if (beastHit2 >= currentAC) {
						slowPrintln("The beast lunges, bitting into you, dealing " + beastDmg2 + " damage.");
						takeDmg(stats, beastDmg2);
					}
					else slowPrintln("The beast attempts to bite you, but you fend off the attack.");
					if (stats[0] > 0) stats[0] -= 1;
					properturn = false;
				}
				else slowPrintln("You have defeated the beast!");

			}
			if (stats[1] > 0) {
				slowPrintln("The beast crumbles before you, panting heavily as it begins to fall apart.");
				stats[8] = 0;
				choice = false;
				while (choice == false) {
					println("What will you do?");
					println("1) Spare the beast");
					println("2) End the beast");
					print("> ");
					stats[8] = input.nextInt();
					println("");
					if (stats[8] == 1) {
						slowPrintln("You place your orb upon the beast, watching it sink into the mass, disappearing. The beast calm before closing its eyes. It's many parts slip off, turning into black mist before they even hit the floor, fading away. Soon all that remains is the body of a single, frail man who looks at you with eyes full of regret and promptly fades into nothing.");
						stats[9] += 1;
						choice = true;
					}
					else if (stats[8] == 2) {
						slowPrintln("You plant your foot upon the beast and kick it back down into the black pool from whence it came.");
						stats[10] += 1;
						choice = true;
					}
					else slowPrintln("Invalid choice. Try again.");
				}
				slowPrintln("Gained 5 essence.");
				stats = addEssence(stats, 5);
			}
			else slowPrintln("You have been defeated by the beast.");
		}
		
		else println("");
		//reset shield, return
		stats[0] = 0;
		return stats;
	}
	
	
	
	
	
	
	//prints the stats in a single line
	public static void printStats(int[] stats) {
		System.out.printf("Hp: %d Mana: %d Essence: %d Potions: %d", stats[1], stats[2], stats[3], stats[5]);
	}
	
	public static int[] takeDmg(int[] stats, int dmg) {
		stats[1] = stats[1] - dmg;
		return stats;
	}
	public static int[] addEssence(int[] stats, int essence) {
		stats[3] = stats[3] + essence;
		return stats;
	}
	
	//method for the player's turn
	public static int[] yourTurn(int[] stats) throws InterruptedException {
		Scanner input = new Scanner(System.in);
		println("It is your turn, what will you do?");
		printStats(stats);
		println("");
		String weapon = "Nothing.";
		if (stats[4] == 1) weapon = "Dagger";
		else if (stats[4] == 2) weapon = "Sword";
		else if (stats[4] == 3) weapon = "Axe";
		else if (stats[4] == 4) weapon = "Spear";
		else if (stats[4] == 5) weapon = "Light Blade";
		println("1) Attack with " + weapon);
		println("2) Shield(-1 mana)");
		println("3) Mana Burst(-2 mana)");
		if (stats[5] > 0) println("4) Drink a potion.");
		print("> ");
		stats[8] = input.nextInt();
		println("");
		return stats;
	}
	
	//determining attack hits and damage based off current weapon
	public static int[] attack(int weapon) {
		int[] result = {0, 0};
		//0 = to hit 1 = damage
		if (weapon == 1) {
			result[0] = (int)(Math.random() * 20)+5;
			result[1] = (int)(Math.random() * 4)+5;
		}
		else if (weapon == 2) {
			result[0] = (int)(Math.random() * 20)+8;
			result[1] = (int)(Math.random() * 8)+7;
		}
		else if (weapon == 3) {
			result[0] = (int)(Math.random() * 20)+5;
			result[1] = (((int)(Math.random() * 6)+1) + ((int)(Math.random() * 6)+1) + 6);
		}
		else if (weapon == 4) {
			result[0] = (int)(Math.random() * 20)+9;
			result[1] = (int)(Math.random() * 4)+5;
		}
		else if (weapon == 5) {
			result[0] = (int)(Math.random() * 20)+9;
			result[1] = (int)(Math.random() * 10)+8;
		}
		return result; 
	}
	
	public static int[] burst() {
		int[] result = {0, 0};
		result[0] = (int)(Math.random() * 20)+11;
		result[1] = (((int)(Math.random() * 6)+1) + ((int)(Math.random() * 6)+1) + 8);
		return result;
	}
	
	//for all my array printing needs
	public static void printArray(String[][] myArray) {
		for (int row = 0; row < myArray.length; row++) {
			for (int column = 0; column < myArray[row].length; column++) {
				System.out.print(myArray[row][column] + " ");
			}
			System.out.println();
		}
	}
	
	//for all my array printing needs
	public static void printArray(int[][] myArray) {
		for (int row = 0; row < myArray.length; row++) {
			for (int column = 0; column < myArray[row].length; column++) {
				System.out.print(myArray[row][column] + " ");
			}
			System.out.println();
		}
	}
	
	//print characters one by one
	public static void slowPrint(String message) throws InterruptedException {
		String neato = message; 
		char[] chars = neato.toCharArray();

		for (int i = 0; i < chars.length; i++) {
			System.out.print(chars[i]);
			Thread.sleep(20);
		}
	}
	
	//print characters one by one and skip down to next line
	public static void slowPrintln(String message) throws InterruptedException {
		String neato = message; 
		char[] chars = neato.toCharArray();
		for (int i = 0; i < chars.length; i++) {
			System.out.print(chars[i]);
			Thread.sleep(20);
		}
		System.out.println("");
	}
	
	public static void reallyslowPrintln(String message) throws InterruptedException {
		String neato = message; 
		char[] chars = neato.toCharArray();
		for (int i = 0; i < chars.length; i++) {
			System.out.print(chars[i]);
			Thread.sleep(200);
		}
		System.out.println("");
	}


	public static void print(String hold) throws InterruptedException {
			String neato = hold;
			char[] chars = neato.toCharArray();
			for (int i = 0; i < chars.length; i++) {
				System.out.print(chars[i]);
				Thread.sleep(10);
			}
	}
	
	public static void println(String hold) throws InterruptedException {
			String neato = hold;
			char[] chars = neato.toCharArray();
			for (int i = 0; i < chars.length; i++) {
				System.out.print(chars[i]);
				Thread.sleep(10);
			}
			System.out.println("");
	}
}
